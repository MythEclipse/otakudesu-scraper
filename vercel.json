{
  "version": 2,
  "builds": [
    {
      "src": "index.ts",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb" // Adjust if necessary
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.ts"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "PORT": "3000" // Default port, adjust if necessary
  }
}
